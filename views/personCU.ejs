<div class="container">	
    <%
    if(CU === 'c'){%>
        <h2>사용자 입력</h2>
	<form action="/person/create_process" method="post" >
		<div class="mb-3">
			<label class="form-label" for="id">아이디</label> 
			<input class="form-control" type="text" name="loginid" placeholder="아이디" style = "width:300px;" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">비밀번호</label> 
			<input class="form-control" type="text" name="password" placeholder="비밀번호" style = "width:300px;" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">이름</label> 
			<input class="form-control" type="text" name="name" placeholder="홍길동" style="width:300px;" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">주소</label> 
			<input class="form-control" type="text" name="address" placeholder="서울" style="width:300px;" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">전화번호</label> 
			<input class="form-control" type="text" name="tel" placeholder="010-1234-5678" style="width:300px;" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">생년월일</label> 
			<input class="form-control" type="text" name="birth" placeholder="YYYYMMDD" style="width:300px;" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">클래스</label> 
			<input class="form-control" type="text" name="class" placeholder="00/01/02" style="width:300px;" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">포인트</label> 
			<input class="form-control" type="number" name="point" placeholder="0" style="width:300px;" />
		</div>
        <button class="btn btn-outline-primary btn-sm" type="submit">입력</button>
  </form>
    <%}
    else{%>
        <h2>사용자 수정</h2>
        <form action="/person/update_process" method="post" >
            <input type="hidden" name="loginId" value="<%=person[0].loginid%>">
            <div class="mb-3">
                <label class="form-label" for="id">아이디</label> 
                <input class="form-control" type="text" name="loginid" value="<%=person[0].loginid%>" placeholder="아이디" style = "width:300px;" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">비밀번호</label> 
                <input class="form-control" type="text" name="password" value="<%=person[0].password%>" placeholder="비밀번호" style = "width:300px;" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">이름</label> 
                <input class="form-control" type="text" name="name" value="<%=person[0].name%>" placeholder="홍길동" style="width:300px;" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">주소</label> 
                <input class="form-control" type="text" name="address" value="<%=person[0].address%>" placeholder="서울" style="width:300px;" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">전화번호</label> 
                <input class="form-control" type="text" name="tel" value="<%=person[0].tel%>" placeholder="010-1234-5678" style="width:300px;" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">생년월일</label> 
                <input class="form-control" type="text" name="birth" value="<%=person[0].birth%>" placeholder="YYYYMMDD" style="width:300px;" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">클래스</label> 
                <input class="form-control" type="text" name="class" value="<%=person[0].class%>" placeholder="00/01/02" style="width:300px;" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="id">포인트</label> 
                <input class="form-control" type="text" name="point" value="<%=person[0].point%>" placeholder="0" style="width:300px;" />
            </div>
            <button class="btn btn-outline-primary btn-sm" type="submit">수정</button>
      </form>
    <%}%>
</div>